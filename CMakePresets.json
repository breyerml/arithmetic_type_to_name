{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "gcc",
      "displayName": "GCC",
      "description": "Default build options for GCC",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Werror"
      }
    },
    {
      "name": "clang",
      "displayName": "Clang",
      "description": "Default build options for Clang",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Weverything -Wno-c++98-compat -Wno-c++98-compat-pedantic -Werror"
      }
    },
    {
      "name": "msvc",
      "displayName": "MSVC",
      "description": "Default build options for MSVC",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/W4 /EHsc /WX"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc",
      "configurePreset": "gcc"
    },
    {
      "name": "clang",
      "configurePreset": "clang"
    },
    {
      "name": "msvc",
      "configurePreset": "msvc"
    }
  ],
  "testPresets": [
    {
      "name": "gcc",
      "configurePreset": "gcc",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "clang",
      "configurePreset": "clang",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "msvc",
      "configurePreset": "msvc",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    }
  ]
}